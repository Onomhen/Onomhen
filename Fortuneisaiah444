    <script>
        const exchanges = [
            { name: 'Huobi', price: 2632.54 },
            { name: 'ZB', price: 2632.02 },
            { name: 'Bitfinex', price: 2618.98 },
            { name: 'Bittrex', price: 2627.51 },
            { name: 'Binance', price: 2633.99 },
            { name: 'Mxc', price: 2620.17 },
            { name: 'Boboo', price: 2617.19 },
            { name: 'Poloniex', price: 2631.76 },
            { name: 'Coinbase', price: 2628.76 },
            { name: 'Kraken', price: 2616.33 }
        ];

        function updateUI() {
            const listContainer = document.getElementById('exchange-list');
            listContainer.innerHTML = '';

            // Fluctuate prices slightly
            exchanges.forEach(ex => {
                ex.price += (Math.random() - 0.5) * 2;
            });

            // Find Max and Min for highlighting
            const prices = exchanges.map(e => e.price);
            const maxPrice = Math.max(...prices);
            const minPrice = Math.min(...prices);

            exchanges.forEach(ex => {
                const isMax = ex.price === maxPrice;
                const isMin = ex.price === minPrice;
                
                listContainer.innerHTML += `
                    <div class="ex-item ${isMax ? 'highest-bid' : ''} ${isMin ? 'lowest-ask' : ''}">
                        <span class="ex-name">${ex.name}</span>
                        <span class="ex-price">${ex.price.toFixed(2)}</span>
                    </div>
                `;
            });

            // Update Spread
            const spread = maxPrice - minPrice;
            document.getElementById('live-spread').innerText = spread.toFixed(6);
            document.getElementById('mid-price').innerText = minPrice.toFixed(2);

            // Update Order Book Rows
            renderBook('asks-container', minPrice, 'var(--ask-red)', 'var(--accent-red)', true);
            renderBook('bids-container', minPrice - 5, 'var(--bid-green)', 'var(--accent-green)', false);
        }

        function renderBook(containerId, startPrice, textColor, barColor, isReverse) {
            const container = document.getElementById(containerId);
            container.innerHTML = '';
            for(let i=0; i<8; i++) {
                const p = isReverse ? startPrice + (i*1) : startPrice - (i*1);
                const amt = (Math.random() * 50).toFixed(4);
                const width = Math.random() * 80;
                container.innerHTML += `
                    <div class="order-row" style="color: ${textColor}">
                        <span>${p.toFixed(4)}</span>
                        <span style="color: white">${amt}</span>
                        <div class="row-bar" style="width: ${width}%; background: ${barColor}"></div>
                    </div>
                `;
            }
        }

        setInterval(updateUI, 1000);
        updateUI();
    </script>
